@model NZWalks.UI.Models.AddWalkViewModel
@{
}

<h1 class="mt-3">Add Walk</h1>
<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>
    <div class="mt-3">
        <label class="form-label">Image URL</label>
        <input type="text" class="form-control" asp-for="WalksImageUrl" />
    </div>
    <div class="mt-3">
        <label class="form-label">Length In Km</label>
        <input type="text" class="form-control" asp-for="LengthInKm" />
    </div>
    <div class="mt-3">
        <label class="form-label">Difficulty Id</label>
        <input type="text" class="form-control" asp-for="DifficultyId" />
    </div>
    <div class="mt-3">
        <label class="form-label">Region Id</label>
        <input type="text" class="form-control" asp-for="RegionId" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
